@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddRowConfig</title>
    <link href="~/Contents/BootStrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Contents/BootStrap/js/jquery-1.11.1.min.js"></script>
    <script src="~/Contents/BootStrap/js/bootstrap.min.js"></script>
    <link href="~/Contents/LigerUI/lib/ligerUI/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <script src="~/Contents/LigerUI/lib/jquery/jquery-1.9.0.min.js"></script>
    <script src="~/Contents/LigerUI/lib/ligerUI/js/ligerui.all.js"></script>
    <script>
        $(function () {
            $(document).on("change", "#selColumns", function () {
                $("#divColumns").empty();
                var rows = $(this).val();
                var InputHtml = "";
                switch (rows) {
                    case "1":
                        InputHtml += '<input type="text" id="Text1" class="NewColumn" value="12" maxlength="2" style="width: 20px;">';
                        break;
                    case "2":
                        InputHtml += '<input type="text" id="Text1" class="NewColumn" value="6" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text2" class="NewColumn" value="6" maxlength="2" style="width: 20px;">';
                        break;
                    case "4":
                        InputHtml += '<input type="text" id="Text1" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text2" class="NewColumn" value="4" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text3" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text4" class="NewColumn" value="4" maxlength="2" style="width: 20px;">';
                        break;
                    case "6":
                        InputHtml += '<input type="text" id="Text1" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text2" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text3" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text4" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text5" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        InputHtml += '<input type="text" id="Text6" class="NewColumn" value="2" maxlength="2" style="width: 20px;">';
                        break;
                    default:
                        for (var i = 0; i < rows; i++) {
                            var currRow = i + 1;
                            InputHtml += '<input type="text" id="Text' + currRow + '" class="NewColumn" value="1" maxlength="2" style="width: 20px;">';
                        }
                        break;

                }

                //console.dir(InputHtml);
                $("#divColumns").append(InputHtml);
            });
        });

    </script>
</head>

<body>
    <div style="padding: 20px;">
        <table style="width: 100%; height: 100%; border: 0px solid #cccccc;">
            <tbody>
                <tr>
                    <td style="width: 20%; height: 50px; font-weight: bold;">单元格数</td>
                    <td>
                        <select id="selColumns" style="width: 120px" data-option="12">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4" selected="selected">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td style="width: 20%; height: 50px; font-weight: bold;">每列所占宽度</td>
                    <td id="divColumns">
                        <input type="text" id="Text1" class="NewColumn" value="2" maxlength="2" style="width: 20px;">
                        <input type="text" id="Text3" class="NewColumn" value="4" maxlength="2" style="width: 20px;">
                        <input type="text" id="Text4" class="NewColumn" value="2" maxlength="2" style="width: 20px;">
                        <input type="text" id="Text5" class="NewColumn" value="4" maxlength="2" style="width: 20px;">
                    </td>
                </tr>
                <tr>
                    <td style="width: 20%; height: 50px;"></td>
                    <td>注：所有列之和必须等于12.</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
